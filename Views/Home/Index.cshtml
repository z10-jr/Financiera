                    </th>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Fecha Creaci&oacute;n
                    </th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.id
                        </td>
                        <td>
                            @(item.Clientes != null ? (item.Clientes.apellido + " " + item.Clientes.nombre) : string.Empty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.monto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estados.nombre)
                        </td>
                        <td>
                            @(item.usuarios != null ? (item.usuarios.apellido + " " + item.usuarios.nombre) : string.Empty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", "Solicitudes", new { id = item.id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Detalles", "Details", "Solicitudes", new { id = item.id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Eliminar", "Delete", "Solicitudes", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })
                            @Html.ActionLink("Observaciones", "Index", "Observaciones", new { id = item.id }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Entidades", "Index", "SolicitudBancos", new { id = item.id }, new { @class = "btn btn-secondary btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<div class="card-footer small text-muted">Canal AUTOS - 2021</div>

