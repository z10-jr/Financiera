@model IEnumerable<Financiera.Models.Solicitudes>

@{
    ViewBag.Title = "Canal AUTOS";
}

<span id="MessageError" class="d-none">@TempData["Error"]</span>
<span id="MessageSuccess" class="d-none">@TempData["Success"]</span>
<div class="card-header">
    <i class="fas fa-table"></i>
    @ViewBag.Title
</div>
<div class="card-body">
    
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
