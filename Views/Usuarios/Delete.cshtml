@model Financiera.Models.usuarios

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span id="Message" class="d-none">@TempData["Error"]</span>
<div class="card-header">
    <i class="fas fa-table"></i>
    @ViewBag.Title
</div>
<div class="card-body">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <dl class="dl-horizontal">
            <dt>
                Nombre
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>

            <dt>
                Apellido
            </dt>

            <dd>
                @Html.DisplayFor(model => model.apellido)
            </dd>

            <dt>
                DNI
            </dt>

            <dd>
                @Html.DisplayFor(model => model.dni)
            </dd>

            <dt>
                Domicilio
            </dt>

            <dd>
                @Html.DisplayFor(model => model.domicilio)
            </dd>

            <dt>
                Telefono
            </dt>

            <dd>
                @Html.DisplayFor(model => model.telefono)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.email)
            </dd>

            <dt>
                Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.usuario)
            </dd>

            <dt>
               Contraseña
            </dt>

            <dd>
                @Html.DisplayFor(model => model.password)
            </dd>

            <dt>
                Fecha
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fecha)
            </dd>

            <dt>
               Perfil
            </dt>

            <dd>
                @Html.DisplayFor(model => model.rol.nombre)
            </dd>

        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Guardar" class="btn btn-success" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-danger" })
        </div>
    }


</div>

<div class="card-footer small text-muted">Canal AUTOS - 2021</div>